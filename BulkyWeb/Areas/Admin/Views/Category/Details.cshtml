@model Category

@{
    ViewData["Title"] = "Details";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Detail Category </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="border p-3">
                @* <div asp-validation-summary="All"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control b-0 shadow" />
                    <label asp-for="Name" class="ms-2"> </label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" disabled class="form-control b-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"> </label>
                </div>
                <div class="row pt-2 mt-3">
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Edit" class="btn btn-outline-primary form-control" asp-route-id="@Model?.Id">Edit</a>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>













