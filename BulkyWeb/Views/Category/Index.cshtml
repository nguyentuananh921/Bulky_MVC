@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
@* <partial name="_Notification" />//Move To Layout to effect all after adding toastr *@

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </div>            
        </div>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DisplayOrder)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DisplayOrder)
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" class="btn btn-primary mx-2" asp-route-id="@item.Id">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a> |
                                <a asp-controller="Category" asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">
                                    <i class="bi bi-info-square"></i>Details
                                </a> |
                                <a asp-controller="Category" asp-action="Delete" class="btn btn-danger mx-2" asp-route-id="@item.Id">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                            </div>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
